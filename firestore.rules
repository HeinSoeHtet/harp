rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Secrets collection: only accessible via Cloud Functions (Admin SDK)
    match /user_secrets/{userId} {
      allow read, write: if false;
    }

    // Default: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
